# ===========================================
# Go-Micro Environment Configuration
# ===========================================

# Service Names
SERVICE_NAME=gateway

# HTTP Server
HTTP_PORT=8080
HTTPS_PORT=8443

# gRPC Addresses
GRPC_PORT=50051
USERS_GRPC_ADDR=localhost:50051
ORDERS_GRPC_ADDR=localhost:50052

# Database - Users Service
USERS_DB_HOST=localhost
USERS_DB_PORT=5432
USERS_DB_USER=postgres
USERS_DB_PASSWORD=postgres
USERS_DB_NAME=users_db
USERS_DB_SSLMODE=disable

# Database - Orders Service
ORDERS_DB_HOST=localhost
ORDERS_DB_PORT=5433
ORDERS_DB_USER=postgres
ORDERS_DB_PASSWORD=postgres
ORDERS_DB_NAME=orders_db
ORDERS_DB_SSLMODE=disable

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# TLS Configuration
TLS_ENABLED=false
TLS_CERT_FILE=certs/gateway.crt
TLS_KEY_FILE=certs/gateway.key
TLS_CA_FILE=certs/ca.crt

# gRPC mTLS Configuration
GRPC_MTLS_ENABLED=false
GRPC_CLIENT_CERT_FILE=certs/gateway-client.crt
GRPC_CLIENT_KEY_FILE=certs/gateway-client.key

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Timeouts (in seconds)
DB_TIMEOUT=30
GRPC_TIMEOUT=10
HTTP_TIMEOUT=30
